<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:id="@+id/benefits_section"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" 
        android:padding="20dp"
        android:background="@color/lite_grey">
	    <TextView
	        android:id="@+id/benefits_text"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:gravity="center"
		    android:textSize="30sp"
		    android:text="Benefits"
		    android:fontFamily="fonts/mensch-bold.ttf"
		    android:textColor="@color/green"
		    android:layout_marginTop="20dp"
		/>
	    <TextView 
	        android:id="@+id/nutrient_description"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:textSize="18sp"
	        android:text="fillerfiller"
	        android:paddingLeft="20dp"
	        android:fontFamily="fonts/Bariol_Regular.otf"
	        android:textColor="@color/green"
	        android:layout_marginTop="20dp"
	        />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/graph_section"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/benefits_section" 
        android:padding="20dp">
	    <TextView
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:gravity="center"
		    android:textSize="30sp"
		    android:text="Recent Intake"
		    android:fontFamily="fonts/mensch-bold.ttf"
		    android:textColor="@color/green"
		    android:layout_marginTop="20dp"
		/>
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textSize="15sp"
	        android:text="Percentage of Daily Value in Past Week"
	        android:fontFamily="fonts/Bariol_Regular.otf"
	        android:textColor="@color/green"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="20dp"
	    />
	    <LinearLayout
	        android:id="@+id/graph_holder"
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="300dp" >
	   </LinearLayout>
   </LinearLayout>
   
    <RelativeLayout 
        android:id="@+id/pie_section"
        android:background="@color/lite_grey"
        android:layout_below="@id/graph_section"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/food_sources_text"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:gravity="center"
		    android:textColor="@color/green"
		    android:textSize="30sp"
		    android:text="Food Sources"
		    android:fontFamily="fonts/mensch-bold.ttf"
		    android:layout_marginTop="20dp"
		/>
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/food_sources_text"
	        android:padding="10dp">
		    <LinearLayout
		        android:id="@+id/pie_holder"
		        android:orientation="vertical"
		        android:gravity="left"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="200dp" >
		   </LinearLayout>
		   
		   <LinearLayout
		       android:orientation="vertical"
		       android:layout_width="0dp"
		       android:layout_weight="1"
		       android:layout_height="wrap_content"
		       android:paddingLeft="10dp">
		       
		       <TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				    android:gravity="left"
				    android:textSize="17sp"
				    android:text="Top 5 Contributors"
				    android:fontFamily="fonts/Bariol_Bold.otf"
				    android:textColor="@color/green"
				/> 
		   
			   <TextView
			        android:id="@+id/top_five_text"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" 
				    android:gravity="left"
				    android:textSize="12sp"
				    android:text="Filler yo"
				    android:textColor="@color/green"
				    android:fontFamily="fonts/Bariol_Regular.otf"
				    android:layout_marginTop="20dp"
				/> 
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
	
    <RelativeLayout
        android:id="@+id/rich_sources_section"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pie_section"
        android:padding="20dp"
        >
        <TextView
            android:id="@+id/rich_sources_header"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:gravity="center"
		    android:textSize="30sp"
		    android:text="Rich Sources"
		    android:fontFamily="fonts/mensch-bold.ttf"
		    android:textColor="@color/green"
		/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal" 
            android:layout_below="@id/rich_sources_header"
            android:paddingTop="20dp" >
            
            <TextView
                android:id="@+id/rich_sources_left_column"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
			    android:layout_height="wrap_content" 
			    android:gravity="left"
			    android:textSize="18sp"
			    android:text="Rich Sources"
			    android:fontFamily="fonts/Bariol_Regular.otf"
			    android:textColor="@color/green"
			/>
            <TextView
                android:id="@+id/rich_sources_right_column"
                android:layout_width="0dp"
                android:layout_weight="1"
			    android:layout_height="wrap_content" 
			    android:gravity="left"
			    android:textSize="18sp"
			    android:paddingLeft="10dp"
			    android:text="Rich Sources"
			    android:fontFamily="fonts/Bariol_Regular.otf"
			    android:textColor="@color/green"
			/>
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/rich_sources_section"
        android:background="@color/lite_grey"
        android:padding="20dp"
        >
        <TextView
            android:id="@+id/deficiency_header"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:gravity="center"
		    android:textSize="30sp"
		    android:text="Deficiency Symptoms"
		    android:fontFamily="fonts/mensch-bold.ttf"
		    android:textColor="@color/green"
		/>
        <TextView
            android:id="@+id/deficiency_symptoms"
            android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:paddingTop="20dp"
		    android:paddingLeft="20dp"
		    android:gravity="left"
		    android:textSize="18sp"
		    android:text="Deficiency Symptoms"
		    android:fontFamily="fonts/Bariol_Regular.otf"
		    android:textColor="@color/green"
		/>
    </LinearLayout>

</RelativeLayout>
</ScrollView>